<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="SpUsage">

    <!-- Base application theme. -->

    <style name="AppTheme.Widget.ActionButton" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.Wonolo" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle" tools:ignore="NewApi">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar" tools:ignore="NewApi">false</item>
        <item name="actionButtonStyle">@style/AppTheme.Widget.ActionButton</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/control_normal</item>
        <item name="titleTextColor">@color/text_title</item>
        <item name="subtitleTextColor">@color/text_title</item>
        <item name="actionMenuTextColor">@color/text_theme_color</item>
    </style>

    <style name="Theme.Wonolo.Splash" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle" tools:ignore="NewApi">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar" tools:ignore="NewApi">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="actionButtonStyle">@style/AppTheme.Widget.ActionButton</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/wo_primary_button_background_selector</item>
        <item name="android:textColor">@drawable/wo_primary_button_text_color_selector</item>
        <item name="android:fontFamily">@font/primary_medium_font_family</item>
        <item name="android:textSize">@dimen/primary_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="PrimaryWhiteButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/wo_primary_white_button_background_selector</item>
        <item name="android:textColor">@drawable/wo_primary_white_button_text_color_selector</item>
        <item name="android:fontFamily">@font/primary_medium_font_family</item>
        <item name="android:textSize">@dimen/primary_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="PrimaryBlackButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/wo_primary_black_button_background_selector</item>
        <item name="android:textColor">@drawable/wo_primary_black_button_text_color_selector</item>
        <item name="android:fontFamily">@font/primary_medium_font_family</item>
        <item name="android:textSize">@dimen/primary_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="PrimaryInputTextLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="errorTextAppearance">@style/PrimaryErrorTextAppearance</item>
        <item name="helperTextTextAppearance">@style/PrimaryHelperTextAppearance</item>
        <item name="hintTextAppearance">@style/PrimaryHintTextAppearance</item>
    </style>

    <style name="PrimaryHintTextAppearance" parent="TextAppearance.Design.Hint">
        <!-- Inactive and Active label color, pointing to a selector-->
        <item name="android:textColor">@color/brand_03</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/primary_regular_font_family</item>
    </style>

    <style name="PrimaryHelperTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_02</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/primary_regular_font_family</item>
        <item name="lineHeight">18dp</item>
    </style>

    <style name="PrimaryErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/primary_regular_font_family</item>
        <item name="lineHeight">18dp</item>
    </style>

    <style name="PrimaryInputEditTextTheme" parent="Theme.Wonolo">
        <item name="colorControlNormal">@color/ui_03</item>
        <item name="colorControlActivated">@color/brand_03</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/primary_regular_font_family</item>
        <item name="lineHeight">28dp</item>
    </style>

    <style name="PrimaryCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:button">@null</item>
        <item name="buttonTint">@color/transparent</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@drawable/wo_primary_checkbox_background_selector</item>
    </style>

    <style name="PrimaryCheckBoxLabelStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/primary_regular_font_family</item>
        <item name="android:textColor">@color/text_02</item>
        <item name="android:textSize">14dp</item>
        <item name="lineHeight">22dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="PrimaryRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@drawable/wo_primary_radio_button_background_selector</item>
        <item name="android:button">@null</item>
        <item name="buttonTint">@color/transparent</item>
    </style>

    <style name="PrimaryTextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-20dp</item>
        <item name="android:layout_marginBottom">-4dp</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:fontFamily">@font/primary_regular_font_family</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_01</item>
        <item name="android:textSize">21dp</item>
        <item name="android:theme">@style/PrimaryInputEditTextTheme</item>
        <item name="lineHeight">28dp</item>
    </style>

    <style name="HeadingLargeStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/heading_large_style_font_size</item>
        <item name="android:fontFamily">@font/primary_bold_font_family</item>
        <item name="android:textColor">@color/text_01</item>
        <item name="lineHeight">@dimen/heading_large_style_line_height</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="HeadingMediumStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/heading_medium_style_font_size</item>
        <item name="android:fontFamily">@font/primary_medium_font_family</item>
        <item name="android:textColor">@color/text_01</item>
        <item name="lineHeight">@dimen/heading_medium_style_line_height</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BodyRegularStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/body_regular_style_font_size</item>
        <item name="android:fontFamily">@font/primary_regular_font_family</item>
        <item name="android:textColor">@color/text_02</item>
        <item name="lineHeight">@dimen/body_regular_style_line_height</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BodySmallStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/body_small_style_font_size</item>
        <item name="android:fontFamily">@font/primary_regular_font_family</item>
        <item name="android:textColor">@color/text_02</item>
        <item name="lineHeight">@dimen/body_small_style_line_height</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BodyLabelStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/body_label_style_font_size</item>
        <item name="android:fontFamily">@font/primary_medium_font_family</item>
        <item name="android:textColor">@color/text_02</item>
        <item name="lineHeight">@dimen/body_label_style_line_height</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CaptionStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/caption_style_font_size</item>
        <item name="android:fontFamily">@font/primary_regular_font_family</item>
        <item name="android:textColor">@color/text_02</item>
        <item name="lineHeight">@dimen/caption_style_line_height</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PrimaryBlackButtonBorderlessWhiteTextStyle" parent="BodyLabelStyle">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/primary_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>
